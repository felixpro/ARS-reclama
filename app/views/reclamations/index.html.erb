<p id="notice"><%= notice %></p>

<h1>Reclamations</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Authnum</th>
      <th>Therapiesnum</th>
      <th>Doctor</th>
      <th>Creationdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reclamations.each do |reclamation| %>
      <tr>
        <td><%= reclamation.customer %></td>
        <td><%= reclamation.authNum %></td>
        <td><%= reclamation.therapiesNum %></td>
        <td><%= reclamation.doctor %></td>
        <td><%= reclamation.creationDate %></td>
        <td><%= link_to 'Show', reclamation %></td>
        <td><%= link_to 'Edit', edit_reclamation_path(reclamation) %></td>
        <td><%= link_to 'Destroy', reclamation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

