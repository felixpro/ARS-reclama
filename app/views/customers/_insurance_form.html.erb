<%= form_with(model: customer, local: true) do |form| %>
<% if customer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(customer.errors.count, "error") %>
      prohibited this customer from being saved:</h2>

    <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field hide_content">
  <%= form.label :insurance %>
  <%= form.text_field :insurance, class:"insurance_input" %>
</div>

<div class="actions hide_content">
  <%= form.button '.', type: 'submit', :id => 'insurance_submit' %>
</div>
<% end %>
