<%= form_with(model: customer, local: true) do |form| %>
<% if customer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(customer.errors.count, "error") %>
      prohibited this customer from being saved:</h2>
    <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% form.label :insurance %>
  <% form.text_field :insurance, value: 'humano' %>

    <div class="humano_form_container">

      <div class="section">
        <div class="container">
          <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :Nombre %></p>
                <p class="input"><%= form.text_field :name %></p>
              </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content id_document">
                <p class="title"><%= form.collection_radio_buttons :doc_type, Customer.doc_types, :first, :first %></p>
                <p class="input"><%= form.text_field :doc %></p>
              </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :affiliate_number %></p>
                <p class="input"><%= form.number_field :affiliate_number %></p>
              </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :adress %></p>
                <p class="input"><%= form.text_field :adress %></p>
              </div>
            </div>
          </div>

          <div class="row second_row">
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :sector %></p>
                <p class="input"><%= form.text_field :sector %></p>
              </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :city %></p>
                <p class="input"><%= form.text_field :city %></p>
              </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :age %></p>
                <p class="input"><%= form.number_field :age %></p>
              </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title">Genero</p>
                <p class="input"><%= form.collection_radio_buttons :gender, Customer.genders, :first, :first %></p>
              </div>
            </div>
          </div>

          <div class="row third_row">
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :email %></p>
                <p class="input"><%= form.text_field :email %></p>
              </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :phone %></p>
                <p class="input"><%= form.number_field :phone %></p>
              </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :cell %></p>
                <p class="input"><%= form.number_field :cell %></p>
              </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="content">
                <p class="title"><%= form.label :img %></p>
                <p class="input"><%= form.text_field :img %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="buttons">
        <%= form.submit :GUARDAR, class: "save_customer" %>
        <button type="button" class=" close_new_modal " data-dismiss="modal" aria-label="Close">
          CANCELAR
        </button>
      </div>

    <% end %>

  </div>
